<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/popup_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:scrollbarAlwaysDrawVerticalTrack="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              style="@style/CustomBackgroundColour"
        >
    <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" android:background="#b0b0b0">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTER DETAILS" style="@style/CustomSubHeadingTextViewStyle"
                    android:singleLine="false" android:layout_column="3"/>
        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#6A5ACD">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Image" android:textAlignment="center" style="@style/CustomSubHeadingTextViewStyle"
                android:layout_span="1" android:gravity="center" android:layout_gravity="left"/>

    </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#b0b0b0">

            <Button android:id="@+id/buttonLoadPicture" android:orientation="horizontal" android:gravity="center" android:textSize="20px" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/CustomButtonStyle"    android:layout_weight="0" android:text="Load Picture" android:layout_gravity="center"></Button>

        </TableRow>


        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal" android:background="#b0b0b0">

            <ImageView android:id="@+id/imgView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></ImageView>

            <EditText
                    android:id="@+id/imageVal" android:visibility="gone"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp"/>

        </TableRow>

        <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

            <TextView
                    android:id="@+id/lblDate"
                    android:text="Current Date (M-D-YYYY): "
                    android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

            <TextView
                    android:id="@+id/tvDate"
                    android:text=""
                    android:padding="18dip" android:textColor="#FFFFFF"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>

            <DatePicker
                    android:id="@+id/dpResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:visibility="gone"/>
        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#b0b0b0">

            <Button android:id="@+id/btnChangeDate" android:orientation="horizontal" android:gravity="center" android:textSize="20px" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/CustomButtonStyle"      android:layout_weight="0" android:text="Change Date" android:layout_gravity="center"></Button>

        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#6A5ACD">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Details" android:textAlignment="center" style="@style/CustomSubHeadingTextViewStyle"
                    android:layout_span="1" android:gravity="center" android:layout_gravity="left"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

            <TextView
                    android:id="@+id/customerName"
                    android:text="Customer Name"
                    android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

            <EditText
                    android:id="@+id/customerNameVal"
                    android:text=""
                    android:padding="18dip"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>
        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"  android:background="#b0b0b0">

            <TextView
                    android:id="@+id/phoneNumber"
                    android:text="Phone Number"
                    android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

            <EditText
                    android:id="@+id/phoneNumberVal"
                    android:text=""
                    android:numeric="integer"
                    android:padding="18dip"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>
        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#6A5ACD">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stitch Info" style="@style/CustomSubHeadingTextViewStyle" android:textAlignment="center"
                    android:layout_span="1" android:gravity="center" android:layout_gravity="left"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRow3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

            <TextView
                    android:id="@+id/stitchStyle"
                    android:text="Stitch Style"
                    android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

            <Spinner
                    android:id="@+id/stitchStyleValSpinner"
                    android:padding="5dip"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp" android:textSize="5sp"/>

            <TextView
                    android:id="@+id/stitchStyleVal"
                    android:visibility="gone"
                    android:text="Stitch Style"
                    android:textColor="#000000"
                    android:layout_width="0dp" android:layout_weight="1"/>
        </TableRow>

        <TableRow
        android:id="@+id/tableRow4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

        <TextView
        android:id="@+id/itemCount"
        android:text="Item Count"
        android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

        <EditText
        android:id="@+id/itemCountVal"
        android:text=""
        android:padding="18dip"
        android:layout_gravity="top" android:layout_weight="1" android:numeric="integer" android:layout_width="0dp" style="@style/CustomEditTextStyle"/>
        </TableRow>

        <!-- Row 3 with 2 columns -->
        <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"  android:background="#b0b0b0">

        <TextView
        android:id="@+id/comments"
        android:text="Comments"
        android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

        <EditText
        android:id="@+id/commentsVal"
        android:text=""
        android:padding="18dip"
        android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp" style="@style/CustomEditTextStyle"/>
        </TableRow>

        <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal" android:background="#6A5ACD">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Measurements" style="@style/CustomSubHeadingTextViewStyle" android:textAlignment="center"
        android:layout_span="1" android:gravity="center" android:layout_gravity="left"/>
        </TableRow>

        <TableRow
        android:id="@+id/tableRow5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

        <TextView
        android:id="@+id/length"
        android:text="Length"
        android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

        <EditText
        android:id="@+id/lengthVal"
        android:text=""
        android:padding="18dip"
        android:layout_gravity="top" android:inputType="numberDecimal" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>
        </TableRow>

        <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"  android:background="#b0b0b0">

        <TextView
        android:id="@+id/shoulder"
        android:text="Shoulder"
        android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

        <EditText
        android:id="@+id/shoulderVal"
        android:text=""
        android:padding="18dip"
        android:layout_gravity="top" android:inputType="numberDecimal" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>
        </TableRow>

        <TableRow
                android:id="@+id/tableRow6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal"  android:background="#b0b0b0">

            <TextView
                    android:id="@+id/lblDeliveryDate"
                    android:text="Delivery Date (M-D-YYYY): "
                    android:layout_width="0dp" android:layout_weight="1" style="@style/CustomTextViewStyle"/>

            <TextView
                    android:id="@+id/tvDeliveryDate"
                    android:text=""
                    android:padding="18dip" android:textColor="#FFFFFF"
                    android:layout_gravity="top" android:layout_weight="1" android:layout_width="0dp"  style="@style/CustomEditTextStyle"/>

            <DatePicker
                    android:id="@+id/dpDeliveryResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:visibility="gone"/>
        </TableRow>

        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" android:background="#b0b0b0">

            <Button android:id="@+id/btnChangeDeliveryDate" android:orientation="horizontal" android:gravity="center" android:textSize="20px" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    style="@style/CustomButtonStyle"    android:layout_weight="0" android:text="Change Date" android:layout_gravity="center"></Button>


        </TableRow>

        <TableRow android:background="#6A5ACD"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:gravity="center_horizontal" >

            <Button android:id="@+id/saveInternalStorage"
                    android:text="Save" style="@style/CustomButtonStyle" android:layout_gravity="top"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

            <Button android:id="@+id/getInternalStorage"
                    android:text="Display"  style="@style/CustomButtonStyle" android:layout_gravity="top"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

            <Button android:id="@+id/clearFields"
                    android:text="Clear"  style="@style/CustomButtonStyle" android:layout_gravity="top"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

            <Button android:id="@+id/listFiles"
                    android:text="List" style="@style/CustomButtonStyle" android:layout_gravity="top"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

            <EditText
                    android:id="@+id/saveDataVal"
                    android:visibility="gone"
                    android:text="Stitch Style"
                    android:layout_width="0dp" android:layout_weight="1" />
        </TableRow>
        <TableRow android:background="#b0b0b0">
        <TextView android:id="@+id/responseTextVal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:padding="5dp"
                  android:text=""
                  />

        </TableRow>

    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </LinearLayout>

</LinearLayout>
</ScrollView>

